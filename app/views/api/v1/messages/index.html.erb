

<div class='create-message'>
<h3>Create a new message</h3>
  <%= form_for @message, url: {action: "create"}, html: {class: "form-control "} do |f| %>
    <%= f.label "Title" %>
    <%= f.text_field :title %>
    <%= f.label "Message" %>
    <%= f.text_field :body, size: "60x12" %>
      <%= fields_for @message.person.email do |p| %>
        <%= p.label "Email of Recipient" %>
          <%= p.text_field :email, class: "autocomplete", id:"email" , name:"email"  %>
      <% end %> 
    <%= f.submit "Create", class: "input-group-text" %>
  <% end %>
</div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Message</th>
        <th scope="col">Title</th>
        <th scope="col">Recipient</th>
      </tr>
    </thead>
    <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.title%></td>
        <td><%= link_to "#{message.person.email}", person_path(message.person.id) %></td>
      </tr>
    <%end%>
    </tbody>
  </table>
  

